pipeline {
  agent any

  environment {
    DOCKERHUB_CREDENTIALS = 'dockerhub-creds' // ID in Jenkins Credentials
    DOCKERHUB_USER = 'yathrebdifallah233'
    IMAGE_NAME = "${DOCKERHUB_USER}/cvpage:latest"
    SLACK_WEBHOOK = credentials('slack-webhook') // alternative: secret text
  }

  triggers {
    pollSCM('H/5 * * * *') // scrute le dépôt toutes les 5 minutes
  }

  stages {
    stage('Checkout') {
      steps {
        checkout scm
      }
    }

    stage('Build Docker Image') {
      steps {
        script {
          def tag = "${env.BUILD_NUMBER}"
          docker.build("${IMAGE_NAME}:${tag}", "-f docker/Dockerfile .")
          env.IMAGE_TAG = tag
        }
      }
    }

    stage('Push to Docker Hub') {
      steps {
        script {
          docker.withRegistry('', "${DOCKERHUB_CREDENTIALS}") {
            sh "docker push ${IMAGE_NAME}:${env.IMAGE_TAG}"
            sh "docker tag ${IMAGE_NAME}:${env.IMAGE_TAG} ${IMAGE_NAME}:latest"
            sh "docker push ${IMAGE_NAME}:latest"
          }
        }
      }
    }
  }

  post {
    success {
      script {
        sh """
          curl -X POST -H 'Content-type: application/json' --data '{"text":"Jenkins: Build ${env.BUILD_NUMBER} succeeded. Image: ${IMAGE_NAME}:${env.IMAGE_TAG}"}' ${SLACK_WEBHOOK}
        """
      }
    }
    failure {
      script {
        sh """
          curl -X POST -H 'Content-type: application/json' --data '{"text":"Jenkins: Build ${env.BUILD_NUMBER} FAILED."}' ${SLACK_WEBHOOK}
        """
      }
    }
  }
}
